<div class="__act_item">
    <div class="fontsize child-item">
        <div class="fontsize-left">
            <img width="15" height="15" src="<%= ASSETS_URL %>img/fontsize.svg">
        </div>
        <div class="fontsize-right">
            <img width="12" height="12" src="<%= ASSETS_URL %>img/up.svg" class="fontsize_plus">
            <img width="12" height="12" src="<%= ASSETS_URL %>img/down.svg" class="fontsize_reduce">
        </div>
    </div>
    <div class="font_bold child-item child-item-btn">
        <img width="13" height="13" src="<%= ASSETS_URL %>img/fontBlob.svg">
    </div>

    <div class="font_italic child-item child-item-btn">
        <img width="13" height="13" src="<%= ASSETS_URL %>img/fontItalic.svg">
    </div>
</div>
<div class="__act_item font_color_box">
    <div class="child-item child-item-btn font_color colors-dropdown">
        <div class="color-icon">
            <img width="12" height="12" src="<%= ASSETS_URL %>img/fontColor.svg" />
            <div class="color_preview" data-color="#333333"></div>
        </div>
        <div class="arrow">
            <img width="15" height="15" src="<%= ASSETS_URL %>img/down.svg" />
        </div>
    </div>
</div>

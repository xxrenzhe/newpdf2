<div class="__act_item">
    <div class="fontlist child-item child-item-title">
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="11" fill="#383e45" fill-rule="evenodd"><path d="M9.63 11.076c.302 0 .543-.1.725-.273s.273-.424.273-.725V1.654h2.84c.624 0 .936-.276.936-.827S14.093 0 13.47 0h-7.7c-.624 0-.936.276-.936.827s.312.827.936.827h2.84v8.424c0 .302.1.543.273.725s.43.273.74.273zm-6.934-.036c.235 0 .424-.07.567-.206s.214-.32.214-.55V6.328H4.66c.246 0 .43-.052.55-.155s.18-.262.18-.475-.06-.37-.18-.47-.304-.15-.55-.15H.73c-.246 0-.43.05-.55.15s-.18.258-.18.47.06.37.18.475.304.155.55.155h1.184v3.956c0 .23.07.413.214.55s.332.206.567.206z"></path></svg>
        <img width="15" height="15" src="<%= ASSETS_URL %>img/down.svg" alt="" aria-hidden="true">
        <div class="font-dropdown"></div>
    </div>
</div>

<div class="__act_item __act_font_controls">
    <div class="fontsize child-item">
        <div class="fontsize-left">
            <img width="15" height="15" src="<%= ASSETS_URL %>img/fontsize.svg" alt="" aria-hidden="true">
        </div>
        <div class="fontsize-right">
            <img width="12" height="12" src="<%= ASSETS_URL %>img/up.svg" class="fontsize_plus" alt="" aria-hidden="true">
            <img width="12" height="12" src="<%= ASSETS_URL %>img/down.svg" class="fontsize_reduce" alt="" aria-hidden="true">
        </div>
    </div>

    <div class="font_bold child-item child-item-btn" title="Bold">
        <img width="13" height="13" src="<%= ASSETS_URL %>img/fontBlob.svg" alt="" aria-hidden="true">
    </div>

    <div class="font_italic child-item child-item-btn" title="Italic">
        <img width="13" height="13" src="<%= ASSETS_URL %>img/fontItalic.svg" alt="" aria-hidden="true">
    </div>

    <div class="font_underline child-item child-item-btn" title="Underline">
        <img width="13" height="13" src="<%= ASSETS_URL %>img/fontunderscore.svg" alt="" aria-hidden="true">
    </div>

    <div class="font_strike child-item child-item-btn" title="Strikethrough">
        <img width="13" height="13" src="<%= ASSETS_URL %>img/fontstrikethrough.svg" alt="" aria-hidden="true">
    </div>
</div>

<div class="__act_item __act_font_colors">
    <div class="child-item child-item-btn font_color colors-dropdown" title="Text color">
        <div class="color-icon">
            <img width="14" height="14" src="<%= ASSETS_URL %>img/fontbg.svg" alt="" aria-hidden="true" />
            <div class="color_preview"></div>
        </div>
        <div class="arrow">
            <img width="12" height="12" src="<%= ASSETS_URL %>img/down.svg" alt="" aria-hidden="true" />
        </div>
    </div>

    <div class="child-item child-item-btn font_bg colors-dropdown" title="Text background">
        <div class="color-icon">
            <img width="14" height="14" src="<%= ASSETS_URL %>img/fontColor.svg" alt="" aria-hidden="true" />
            <div class="color_preview" style="background-color:#ff0000;"></div>
        </div>
        <div class="arrow">
            <img width="12" height="12" src="<%= ASSETS_URL %>img/down.svg" alt="" aria-hidden="true" />
        </div>
    </div>
</div>

<div class="__act_item __act_opacity_section">
    <svg viewBox="0 0 24 24" width="16" height="16" fill="#6B7280">
        <path d="M17.66 8L12 2.35 6.34 8C4.78 9.56 4 11.64 4 13.64s.78 4.11 2.34 5.67 3.61 2.35 5.66 2.35 4.1-.79 5.66-2.35S20 15.64 20 13.64 19.22 9.56 17.66 8zM6 14c.01-2 .62-3.27 1.76-4.4L12 5.27l4.24 4.38C17.38 10.77 17.99 12 18 14H6z"/>
    </svg>
    <button type="button" class="__act_range_reduce __act_item_btn" title="Decrease opacity" aria-label="Decrease opacity">
        <img width="14" height="14" src="<%= ASSETS_URL %>img/zoomreduce.svg" alt="" aria-hidden="true">
    </button>
    <input class="__act_bg_opacity" type="range" value="10" max="10" min="0" step="0.1" data-locale="opacity" data-locale-attrs="aria-label" aria-label="${LANG_MESSAGES.opacity}">
    <button type="button" class="__act_range_plus __act_item_btn" title="Increase opacity" aria-label="Increase opacity">
        <img width="14" height="14" src="<%= ASSETS_URL %>img/zoomadd.svg" alt="" aria-hidden="true">
    </button>
    <span class="__act_bg_opacity_text">100%</span>
</div>

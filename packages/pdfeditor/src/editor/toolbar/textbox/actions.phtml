<div class="__act_item">
    <div class="fontsize child-item">
        <div class="fontsize-left">
            <img width="15" height="15" src="<%= ASSETS_URL %>img/fontsize.svg">
        </div>
        <div class="fontsize-right">
            <img width="12" height="12" src="<%= ASSETS_URL %>img/up.svg" class="fontsize_plus">
            <img width="12" height="12" src="<%= ASSETS_URL %>img/down.svg" class="fontsize_reduce">
        </div>
    </div>

    <div class="font_bold child-item child-item-btn">
        <img width="13" height="13" src="<%= ASSETS_URL %>img/fontBlob.svg">
    </div>

    <div class="font_italic child-item child-item-btn">
        <img width="13" height="13" src="<%= ASSETS_URL %>img/fontItalic.svg">
    </div>

    <div class="font_underline child-item child-item-btn">
        <img width="13" height="13" src="<%= ASSETS_URL %>img/fontunderscore.svg">
    </div>

    <div class="font_strike child-item child-item-btn">
        <img width="13" height="13" src="<%= ASSETS_URL %>img/fontstrikethrough.svg">
    </div>
</div>

<div class="__act_item">
    <div class="child-item child-item-btn font_bg colors-dropdown">
        <div class="color-icon">
            <img width="12" height="12" src="<%= ASSETS_URL %>img/fontbg.svg" />
            <div class="color_preview" style="background-color:#ff0000;"></div>
        </div>
        <div class="arrow">
            <img width="15" height="15" src="<%= ASSETS_URL %>img/down.svg" />
        </div>
    </div>

    <div class="child-item child-item-btn font_color colors-dropdown">
        <div class="color-icon">
            <img width="12" height="12" src="<%= ASSETS_URL %>img/fontColor.svg" />
            <div class="color_preview"></div>
        </div>
        <div class="arrow">
            <img width="15" height="15" src="<%= ASSETS_URL %>img/down.svg" />
        </div>
    </div>
</div>

<div class="__act_item">
    <span data-locale="opacity" class="width-max-content">${LANG_MESSAGES.opacity}: </span>
    <div class="__act_range_reduce __act_item_btn"><img src="<%= ASSETS_URL %>img/zoomreduce.svg"></div>
    <input class="__act_bg_opacity" type="range" value="0" max="10" min="0" step="0.1">
    <div class="__act_range_plus __act_item_btn"><img src="<%= ASSETS_URL %>img/zoomadd.svg"></div>
    <span class="__act_bg_opacity_text"></span>
</div>